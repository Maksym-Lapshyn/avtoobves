<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <script type="text/javascript" src="~/lib/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/lib/bootstrap-theme.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="~/css/error-style.css" rel="stylesheet"/>
    <title>@ViewBag.Title</title>
</head>
<body>
<div>
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }

    @if (TempData["fail"] != null)
    {
        <div class="alert alert-danger">@TempData["fail"]</div>
    }
    @RenderBody()
</div>
</body>
</html>