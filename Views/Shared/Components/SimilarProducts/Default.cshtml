@model IEnumerable<Product>

@{ 
    bool first = false;
}

<div class="col-xs-12 wow fadeInUp delay-01s">
    <div class="carousel slide" data-ride="carousel" data-type="multi" data-interval="5000" id="myCarousel">
        <div class="carousel-inner">
            @foreach (Product product in Model)
            {
                if (!first)
                {
                    <div class="item active">
                        <div class="col-md-3 col-xs-6">
                            <a href="@Url.Action("Product", "Home", new { productId = product.Id })">
                                <div class="portfolio-box">
                                    <img src="../Images/@product.SmallImage" alt="@product.Name" name="@product.Name" class="img-responsive">
                                    <div class="portfolio-box-caption">
                                        <div class="portfolio-box-caption-content-smaller">
                                            <h1>@product.Name</h1>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                    first = true;
                }
                else
                {
                    <div class="item">
                        <div class="col-md-3 col-xs-6">
                            <a href="@Url.Action("Product", "Home", new { productId = product.Id })">
                                <div class="portfolio-box">
                                    <img src="../Images/@product.SmallImage" alt="@product.Name" name="@product.Name" class="img-responsive">
                                    <div class="portfolio-box-caption">
                                        <div class="portfolio-box-caption-content-smaller">
                                            <h1>@product.Name</h1>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
    </div>
</div>